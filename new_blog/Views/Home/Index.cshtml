@model new_blog.Models.IndexViewModel

@{
    ViewData["Title"] = "Блог";
}

<header class="p-3 bg-dark text-white">
    <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
            <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
            </a>

            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                <li><a asp-controller="Home" asp-action="Index" class="nav-link px-2 text-secondary">Home</a></li>
                <li><a asp-controller="Home" asp-action="Create" class="nav-link px-2 text-white">Create</a></li>
                <li><a href="#" class="nav-link px-2 text-white">About</a></li>
            </ul>

            <form method="get" class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
                <div class="d-flex">
                    <input type="search" name="Filter.Name" value="@Model.Filter.Name" class="form-control form-control-dark" placeholder="Search..." aria-label="Search" />
                    <input type="submit" value="Поиск" class="btn btn-outline-secondary ml-2" />
                </div>
            </form>

            <div class="text-end">
                <button type="button" class="btn btn-outline-light me-2">Login</button>
                <button type="button" class="btn btn-warning">Sign-up</button>
            </div>
        </div>
    </div>
</header>

<main class="container p-3">

    @{
        foreach (var post in Model.Posts)
        {
        <div class="p-3 shadow rounded-3">
            <h2> @post.Name </h2>
            <p> @post.ShortDesc </p>
            <a asp-controller="Home" asp-action="Edit" asp-route-id="@post.Id">Изменить</a>
        </div>
        }
    }
</main>


<footer class="py-3 my-4">
    <ul class="nav justify-content-center border-bottom pb-3 mb-3">
        <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Home</a></li>
        <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Features</a></li>
        <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Pricing</a></li>
        <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">FAQs</a></li>
        <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">About</a></li>
    </ul>
    <p class="text-center text-muted">© 2021 Company, Inc</p>
</footer>
